FROM wh1isper/spark-connector-server:3.4.1

ARG SPARGLIM_VERSION

RUN pip install sparglim==${SPARGLIM_VERSION}

ENTRYPOINT [ "tini" ,"--"]
CMD [ "sparglim-server", "start" ]

