ARG SPARK_VERSION=3.5.0
FROM wh1isper/spark-connector-server:${SPARK_VERSION}

COPY --chown=executor:executor ./ ./sparglim
RUN pip install --no-cache-dir ./sparglim

ENTRYPOINT [ "tini" ,"--"]
CMD [ "sparglim-server", "start" ]

